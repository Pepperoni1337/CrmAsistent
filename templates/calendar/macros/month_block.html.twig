{% macro monthBlock(name, events) %}
    <div class="col-xl-4 col-sm-6 mb-xl-0 my-3">
        <div class="card">
            <div class="card-header p-2 ps-3">
                <div class="d-flex justify-content-between p-3">
                    <h3 class="text-2xl mb-0">{{ name }}</h3>
                </div>
            </div>
            <hr class="dark horizontal my-0">
            {% for event in events %}
                <div class="d-flex flex-column">
                    <div class="px-2 py-3  ps-3 d-flex flex-row justify-content-between align-items-center">
                        {% if event.day > "now"|date("d")  %}
                            <h3 class="mb-0 text-2xl text-dark">
                                {{ event.day }}.{{ event.month }}.{{ event.year }}
                                -
                                {{ event.name }}
                            </h3>
                        {% else %}
                            <h3 class="mb-0 text-2xl text-light">
                                {{ event.day }}.{{ event.month }}.{{ event.year }}
                                -
                                {{ event.name }}
                            </h3>
                        {% endif %}
                    </div>
                </div>
                <hr class="dark horizontal my-0">
            {% endfor %}
        </div>
    </div>
{% endmacro %}