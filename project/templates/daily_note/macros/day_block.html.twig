{% macro dayBlock(date, dailyNotes) %}
    <div class="col-xl-4 mb-xl-0 my-3">
        <div class="card">
            <div class="card-header p-2 ps-3">
                <div class="d-flex justify-content-between p-3">
                    <h3 class="text-2xl mb-0">{{ date|date('d. m. Y') }}</h3>
                </div>
            </div>
            <hr class="dark horizontal my-0">
            {% for note in dailyNotes %}
                <div class="d-flex flex-column">
                    <div class="px-2 py-3 ps-3 d-flex flex-row justify-content-between align-items-center">
                            {{ note.text }}
                    </div>
                </div>
                <hr class="dark horizontal my-0">
            {% endfor %}
        </div>
    </div>
{% endmacro %}