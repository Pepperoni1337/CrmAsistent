{% macro topicBlock(topic) %}
    <div class="col-xl-3 mb-xl-0 my-3">
        <div class="card">
            <div class="card-header p-2 ps-3">
                <div class="d-flex flex-column">
                    <h3 class="text-2xl mb-0">
                        <a href="{{ path('note_topic_detail', { topic: topic.id }) }}">
                            {{ topic.name }}
                        </a>
                    </h3>
                    <p class="mb-0">{{ topic.description|nl2br }}</p>
                </div>
            </div>
            <hr class="dark horizontal my-0">
        </div>
    </div>
{% endmacro %}